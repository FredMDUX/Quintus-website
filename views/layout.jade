doctype 5
html
  head
    title= "Quintus HTML5 Game Engine"
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/js/codemirror/codemirror.css')
    link(rel='stylesheet', href='/js/highlight/styles/github.css')
    meta(name="viewport",content="width=device-width, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0")
    
    link(rel="icon",type="image/x-icon",href="/favicon.ico")
    link(rel="shortcut icon",type="image/x-icon",href="/favicon.ico")

  body
    header#site-header
      #title-game
      .cannon.cannon-left
      .cannon.cannon-right
      section#site-top
        h1
          a(href="#")
            span Q
            | uintus
        nav#site-nav
          ul
            li(class=((page == 'home') ? "selected" : ""))
              a(href="/") home
            li(class=((page == 'documentation') ? "selected" : ""))
              a(href="/documentation") documentation
            li
              a(href="http://github.com/cykod/Quintus") github
          .clear
    section#leader
      h1
        | Quintus is an easy-to-learn, fun-to-use HTML5 game engine
        | for mobile, desktop and beyond!
    block content
    //script(src="/socket.io/socket.io.js")
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js")

    // Code Mirror
    script(src="/js/codemirror/codemirror.js")
    script(src="/js/codemirror/mode/xml.js")
    script(src="/js/codemirror/mode/javascript.js")
    script(src="/js/codemirror/mode/css.js")
    script(src="/js/codemirror/mode/htmlmixed.js")

    // Highlight JS
    script(src="/js/highlight/highlight.pack.js")

    // Website
    script(src="/js/quintus-website.js")

